APP_NAME=DocHandler
NODE_ENV=production

# Port Configuration
FRONTEND_PORT=3100
API_PORT=8080
OLLAMA_PORT=11434

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434    # For built-in Ollama
#OLLAMA_HOST=http://localhost:11434 # For external Ollama
OLLAMA_MODELS=llama2-7b-chat,mistral-7b

# Vector Database
VECTORS_PATH=/data/vectors
DB_PATH=/data/db

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
NOMIC_API_KEY=

# Security
JWT_SECRET=change_this_in_production
COOKIE_SECRET=change_this_in_production

# Monitoring
LOGGING_LEVEL=info

# Document Processing
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx,.md
MAX_CONCURRENT_INDEXING=3

# Embedding Configuration
DEFAULT_EMBEDDING_MODEL=nomic-embed-text-v1
EMBEDDING_BATCH_SIZE=32
VECTOR_DIMENSION=768